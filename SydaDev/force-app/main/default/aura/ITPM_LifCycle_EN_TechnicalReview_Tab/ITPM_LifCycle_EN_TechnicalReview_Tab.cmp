<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId,lightning:isUrlAddressable" controller="ITPM_LifeCycle_Tabs_Controller">
	<aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:attribute name="ITPMObj" type="IT_Portfolio_Management__c" default=""/>
    <aura:attribute name="link1" type="String"/>
    <div class="slds-card slds-card_boundary" style="box-shadow: 0 2px 4px 4px rgba(0, 0, 0, 0.16);">
        <div class="slds-section slds-is-open slds-m-top_none">
            <h3 class="slds-section__title">
                <button aria-controls="expando-unique-id" aria-expanded="true" class="slds-button slds-section__title-action">
                    <lightning:icon iconName="utility:chevrondown" alternativeText="Open" size="xx-small" class="slds-p-right_x-small"/>
                    <span class="slds-truncate" title="Section Title"> Technical Review and Estimates </span>
                </button>
            </h3>
       
        <lightning:messages /><br/>
            <div class="slds-p-left_medium">
                <div class="slds-grid">
                	<div class="slds-col--padded slds-large-size--6-of-12">
                    	<span class="slds-text-title_bold">Technical Requirements: </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Technical_Requirements__c}"/>
                        	</span>
                     	</div>
                	</div>
                	<div class="slds-col--padded slds-large-size--6-of-12">
                        <span class="slds-text-title_bold">Total Estimate (Hours): </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Estimated_range_of_effort_in_hours__c}"/>
                        	</span>
                     	</div>
                    </div>
          		</div><br/><br/>
            </div>
            <div class="slds-p-left_medium">
                <div class="slds-grid">
                	<div class="slds-col--padded slds-large-size--6-of-12">
                    	<span class="slds-text-title_bold">IT/Delivery Functional Area: </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.IT_Functional_Area__c}"/>
                        	</span>
                     	</div>
                	</div>
                	<div class="slds-col--padded slds-large-size--6-of-12">
                        <span class="slds-text-title_bold">Planned Release Date: </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputDate format="MM/dd/yyyy" value="{!v.ITPMObj.ITS_Intake_Request__r.Planned_Release_Date__c}"/>
                        	</span>
                     	</div>
                    </div>
          		</div><br/><br/>
            </div>
            <div class="slds-p-left_medium">
                <div class="slds-grid">
                	<div class="slds-col--padded slds-large-size--6-of-12">
                    	<span class="slds-text-title_bold">IT/Delivery Sub-Functional Area: </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.IT_Functional_Sub_Area__c}"/>
                        	</span>
                     	</div>
                	</div>
                	<div class="slds-col--padded slds-large-size--6-of-12">
                        <span class="slds-text-title_bold">Monthly Bundle (Patient Care use only): </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Assigned_Release_monthly_bundle__c}"/>
                        	</span>
                     	</div>
                    </div>
          		</div><br/><br/>
            </div>
            <div class="slds-p-left_medium">
                <div class="slds-grid">
                	<div class="slds-col--padded slds-large-size--6-of-12">
                    	<span class="slds-text-title_bold">Primary Application: </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.ConnectHope_Sub_Apps__c}"/>
                        	</span>
                     	</div>
                	</div>
                	<div class="slds-col--padded slds-large-size--6-of-12">
                        <span class="slds-text-title_bold">Analyst: </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                                <a href="{!v.link1}"  target="_blank">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Assigned_Technical_Analyst__r.Name}"/>
                                </a>
                        	</span>
                     	</div>
                    </div>
          		</div><br/><br/>
            </div>
            <div class="slds-p-left_medium">
                <div class="slds-grid">
                	<div class="slds-col--padded slds-large-size--6-of-12">
                    	<span class="slds-text-title_bold">Other Impacted Applications: </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Impacted_Applications__c}"/>
                        	</span>
                     	</div>
                	</div>
                	<div class="slds-col--padded slds-large-size--6-of-12">
                        <span class="slds-text-title_bold">IT Notes: </span>
                     	<div class="slds-form-element__control">
                     		<span class="valueFont">
                            	<ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.ITS_Notes__c}"/>
                        	</span>
                     	</div>
                    </div>
          		</div><br/><br/>
            </div>
        </div>
    </div>
</aura:component>