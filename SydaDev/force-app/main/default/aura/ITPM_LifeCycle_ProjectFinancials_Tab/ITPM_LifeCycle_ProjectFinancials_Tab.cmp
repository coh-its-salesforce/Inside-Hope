                                    <span class="slds-text-title_bold">
                                        <ui:outputCurrency value="{!v.ITPMRecs.Total_Remaining_Opex_Budget_E_F__c}" />
                                    </span>
                                    <aura:set attribute="else">
                                        <span class="slds-text-title_bold" style="color:Red;">
