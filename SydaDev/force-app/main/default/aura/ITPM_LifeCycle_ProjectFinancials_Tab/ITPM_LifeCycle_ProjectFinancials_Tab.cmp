                                    <span class="slds-text-title_bold">
                                        <ui:outputCurrency value="{!v.ITPMRecs.Remaining_Capex_Budget_AB__c}" />
                                    </span>
                                    <aura:set attribute="else">
                                        <span class="slds-text-title_bold" style="color:Red;">
