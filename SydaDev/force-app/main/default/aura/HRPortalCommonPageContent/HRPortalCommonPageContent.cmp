<aura:component controller="HRPortalCommonController" implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" access="global" >
	
    <aura:attribute name="pageName" description="Unique Page Name as per object HR Portal " 
                    type="string" required="true" default="New_Employee"/>
    
    <aura:attribute name="content" description="page content" 
                    type="string" default=""/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div aura:id="container">
        <p>
            <lightning:formattedRichText value="{!v.content}"/>
        </p>
    </div>
</aura:component>