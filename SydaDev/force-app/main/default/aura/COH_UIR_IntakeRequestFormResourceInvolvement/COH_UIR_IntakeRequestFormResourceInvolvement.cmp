    <div class="slds-form-horizontal">        
        <!-- Are resources impacted? -->
        <div class="slds-grid slds-wrap">        
            <div class="slds-size_1-of-1 slds-medium-size_1-of-2 slds-p-horizontal_medium slds-p-vertical_small">
                <div class="slds-form-element__control">
                    <lightning:select value="{!v.mIntakeRequest.COH_UIR_SHR_OtherDeptsResourcesImpacted__c}" 
                                      label="Are resources from other departments impacted?"
                                      name="COH_UIR_SHR_OtherDeptsResourcesImpacted__c"
                                      aura:id="intakeRequestForm"
                                      required="true"
                                      title="Consider upstream AND downstream impacts. If departments are impacted please select from the drop down list and provide details of how they are impacted.">
                        <option value="">--Select--</option>
                        <aura:iteration items="{!v.mPicklists.COH_UIR_SHR_OtherDeptsResourcesImpacted__c}" var="currentPicklistOption">
                            <option value="{!currentPicklistOption.value}" selected="{!currentPicklistOption.value==v.mIntakeRequest.COH_UIR_SHR_OtherDeptsResourcesImpacted__c}">{!currentPicklistOption.label}</option>                        
                        </aura:iteration>
                    </lightning:select>                
                </div>         
            </div>
        </div>
        <aura:if isTrue="{!v.mIntakeRequest.COH_UIR_SHR_OtherDeptsResourcesImpacted__c == 'Yes'}">
            <div class="slds-grid slds-wrap">
                <div class="slds-size_1-of-1 slds-medium-size_1-of-2 slds-p-horizontal_medium slds-p-vertical_small">              
                    <div class="slds-form-element__control">
