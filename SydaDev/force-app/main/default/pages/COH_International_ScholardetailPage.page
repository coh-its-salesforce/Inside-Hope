                                    <apex:outputField value="{!con.Choice1StartDate__c}"/> 
                                    &nbsp;&nbsp;To&nbsp;&nbsp;
                                    <apex:outputField value="{!con.Choice1EndDate__c}"/>
                                </apex:outputpanel>
                            </apex:outputLabel>
                        </apex:pageBlockSection>
                        
