                        <apex:outputLabel >Please select a Category:&nbsp; &nbsp;  <apex:outputField value="{!con.Select_Category__c}"/> </apex:outputlabel><br/><br/>
                        
                        <apex:pageBlockSection columns="2" title="Personal Information" >
                            
                            <apex:outputField value="{!con.FirstName}"/>
                            <apex:outputField value="{!con.LastName}"/>
                            <apex:outputField value="{!con.Nickname__c}" label="Nickname"/>
                            <apex:outputField value="{!con.Legal_Name__c}" label="Legal Name Matching Passport"/>
                            <apex:outputField value="{!con.Title}"/>
                            <apex:outputField value="{!con.Position__c}" label="Current Position"/> 
                            <apex:outputField value="{!con.Institution__c}" label="Current Institution"/>
                            <apex:outputField value="{!con.Birthdate}" label="Date of Birth"/>
                            <apex:outputField value="{!con.Gender__c}"/>
                            <apex:outputField value="{!con.Nationality__c}"/>
                            <apex:outputField value="{!con.Country_of_Residence__c}" label="Country of Residence Prior to coming to the US "/>
                            
                            
                        </apex:pageBlockSection> 
                        <apex:pageBlockSection columns="2" title="Home Mailing Address " >
                            <apex:outputField value="{!con.MailingStreet}" label="Street"/>
                            <apex:outputField value="{!con.MailingCity}" label="City"/>
                            <apex:outputField value="{!con.MailingState}" label="State"/>
                            <apex:outputField value="{!con.MailingPostalCode}" label="PostalCode"/>
                            <apex:outputField value="{!con.MailingCountry}" label="Country"/>
                            <apex:outputField value="{!con.Home_Phone__c}" label="Phone Number"/>
                        </apex:pageBlockSection>
                        
                        
                        
                        <apex:pageBlockSection columns="2" title="Work Mailing Address" >
                            <apex:outputField value="{!con.street__c}"/>
                            <apex:outputField value="{!con.City__c}"/>
                            <apex:outputField value="{!con.State__c}"/>
                            <apex:outputField value="{!con.Postal_Code__c}"/>
                            <apex:outputField value="{!con.Country__c}"/>
                            <apex:outputField value="{!con.Work_Phone_Number__c}" label="Phone Number"/>
                        </apex:pageBlockSection>
                        
                        <apex:pageBlockSection columns="2" title="Contact Information" >
                            <apex:outputField value="{!con.Email}" label="Email Address"/>
                            <apex:outputField value="{!con.Phone}" label="Primary Phone Number(Cell, Work, Home)"/>
                            <apex:outputField value="{!con.OtherPhone}" label="Secondary Phone Number(Cell, Work, Home)"/>
                        </apex:pageBlocksection>
                        
                        <apex:pageBlockSection title="Emergency Contact information" columns="2" >
                            <apex:outputField value="{!con.Emergency_Name__c}" label="Emergency Contact Name"/> 
                            <apex:outputField value="{!con.Emergency_Phone__c}" label="Emergency Contact Phone"/> 
                            <apex:outputField value="{!con.Emergency_Email__c}" label="Emergency Contact Email"/> 
                            <apex:outputField value="{!con.Relationship__c}" label="Emergency Contact Realtionship"/> 
                        </apex:pageBlockSection>
                        
                        <apex:pageBlockSection columns="1" title="Proposed Dates of the Visit">
                            Provide two time periods between one and three months in duration
