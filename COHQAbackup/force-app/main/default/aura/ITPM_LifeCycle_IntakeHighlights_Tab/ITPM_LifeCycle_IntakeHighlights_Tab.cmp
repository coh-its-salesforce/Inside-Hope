<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId,lightning:isUrlAddressable" controller="ITPM_LifeCycle_Tabs_Controller">
   
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:attribute name="ITPMObj" type="IT_Portfolio_Management__c" default=""/>
    <aura:attribute name="link1" type="String"/>
    <aura:attribute name="link2" type="String"/>
    <aura:attribute name="link3" type="String"/>
    <aura:attribute name="link4" type="String"/>
    <aura:attribute name="link5" type="String"/>
    <aura:attribute name="link6" type="String"/>
    <aura:attribute name="IHrs" type="Integer" default="0"/>
  
    
   
    
     <div class="slds-card slds-card_boundary" style="box-shadow: 0 2px 4px 4px rgba(0, 0, 0, 0.16);">
        <div class="slds-section slds-is-open slds-m-top_none">
            <h3 class="slds-section__title">
                <button aria-controls="expando-unique-id" aria-expanded="true" class="slds-button slds-section__title-action">
                    <lightning:icon iconName="utility:chevrondown" alternativeText="Open" size="xx-small" class="slds-p-right_x-small"/>
                    <span class="slds-truncate" title="Section Title"> Intake Highlights </span>
                </button>
            </h3>
            
            <lightning:messages /><br/>
            <div class="slds-p-left_medium">
                <div class="slds-grid">
                    <div class="slds-col--padded slds-large-size--6-of-12">
                        <span class="slds-text-title_bold">Request ID: </span>
                        <div class="slds-form-element__control">
                            <span class="valueFont"><a href="{!v.link1}"  target="_blank"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Name}"/></a></span></div>
                    </div>
                    <div class="slds-col--padded slds-large-size--6-of-12">
                        
                        <span class="slds-text-title_bold">Request Type: </span>
                        <div class="slds-form-element__control">
                            <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Request_Type__c}" /></span></div>
                        
                    </div>
                </div><br/><br/>
                <div class="slds-grid">
                    <div class="slds-col--padded slds-large-size--6-of-12">
                        <span class="slds-text-title_bold">Request Name: </span>
                        <div class="slds-form-element__control">
                            <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Request_Name__c}" /></span></div>
                    </div>
                    <div class="slds-col--padded slds-large-size--6-of-12">
                        
                        <span class="slds-text-title_bold">Fiscal Year Start: </span>
                        <div class="slds-form-element__control">
                            <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Fiscal_Year_Start__c}" /></span></div>
                   </div>
          </div><br/><br/>
          <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Short Description of Request: </span>
                                                     <div class="slds-form-element__control">
                                                         <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Project_Short_Description__c}"/></span></div>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                                 
                    <span class="slds-text-title_bold">Primary ISC: </span>
                                                    <div class="slds-form-element__control">
                                                        <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Primary_ISC__c}" /></span></div>
               
                </div>
            </div><br/><br/>
              <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Executive Summary: </span>
                                                     <div class="slds-form-element__control">
                                                         <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Executive_Summary__c}" /></span></div>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold"> Executive Sponsor: </span>
                                                    <div class="slds-form-element__control">
                                                        <span class="valueFont"><a href="{!v.link3}"  target="_blank"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Business_Sponsor__r.Name}"/></a></span></div>
                   
                   </div>
          </div><br/><br/>
             <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Problem Statement: </span>
                                                     <div class="slds-form-element__control">
                                                         <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Project_Background__c}" /></span></div>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Business Owner: </span>
                                                    <div class="slds-form-element__control">
                                                        <span class="valueFont"><a href="{!v.link2}"  target="_blank"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Business_Owner__r.Name}" /></a></span></div>
                
                    </div>
          </div><br/><br/>
             <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     
                     <span class="slds-text-title_bold">Budget Category: </span>
                                                     <div class="slds-form-element__control">
                                                         <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Budget_Category__c}" /></span></div>
                 </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">IT/Delivery Sponsor: </span>
                                                    <div class="slds-form-element__control">
                                                        <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.IT_Sponsor__c}"/></span></div>
                 
                </div>
          </div><br/><br/>
             <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Total Approved Capex Budget: </span>
                                                     <div class="slds-form-element__control">
                                                         <span class="valueFont"><ui:outputCurrency value="{!v.ITPMObj.ITS_Intake_Request__r.Total_Approved_Capex_Budget_IT__c}" /></span></div>
                    
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">IT/Delivery Owner: </span>
                                                    <div class="slds-form-element__control">
                                                        <span class="valueFont"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.IT_Owner__c}"/></span></div>
                   
                    </div>
          </div><br/><br/>
            <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Total Approved Opex Budget: </span>
                                                     <div class="slds-form-element__control">
                                                         <span class="valueFont"><ui:outputCurrency value="{!v.ITPMObj.ITS_Intake_Request__r.Total_Approved_Opex_Budget_IT__c}" /></span></div>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">Business Lead/Project Manager: </span>
                                                    <div class="slds-form-element__control">
                                                        <span class="valueFont"><a href="{!v.link4}"  target="_blank"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Business_Lead_Project_Manager__r.Name}" /></a></span></div>
                
                 </div>
          </div><br/><br/>
            <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Total Approved Internal IT Hrs: </span>
                                                     <div class="slds-form-element__control">
                                                         <span class="valueFont"><ui:outputNumber value="{!v.IHrs}" /></span></div>
          </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                      <span class="slds-text-title_bold">IT Project Manager: </span>
                                                    <div class="slds-form-element__control">
                                                        <span class="valueFont"><a href="{!v.link5}"  target="_blank"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.IT_Project_Manager__r.Name}" /></a></span></div>
                
                </div>
          </div><br/><br/>
            
           
            
            
         
            <br/>
            
            </div>
        </div>
        </div>
</aura:component>