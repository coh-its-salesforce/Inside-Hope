<aura:component controller="COH_UTIL_LookupFieldController">
    <aura:handler name="newLookupValueSelected" event="c:COH_UTIL_LookupFieldUpdatedEvent" action="{!c.handleLookupFieldChange}" />
    <aura:handler event="aura:waiting" action="{!c.showSpinner}" />
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}" />
    <aura:method name="validateFields" action="{!c.validateFields}" />
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    
    <!-- "Required" Parameter -->
    <aura:attribute name="mSelectedRecord" type="SObject" />
    <aura:attribute name="mSObjectAPIName" type="String" />
    <aura:attribute name="mPrimaryFieldAPIName" type="String" />
    <aura:attribute name="mLabel" type="String" />
    
    <!-- "Optional" Parameter -->
    <aura:attribute name="mIconName" type="String" default="standard:default" />
    <aura:attribute name="mSecondaryFieldAPIName" type="String" default="" />
    <aura:attribute name="mNumberOfRecordsToShow" type="Integer" default='5' />
    <aura:attribute name="mAdditionalSelectFields" type="String" default="" />
    <aura:attribute name="mAdditionalSearchConditions" type="String" default="" />
    <aura:attribute name="mRequired" type="Boolean" default="false" />
    
    <!-- "Private" -->
    <aura:attribute name="mRecordsList" type="List" />
    <aura:attribute name="mSelectedRecordPrimaryField" type="String" />
    <aura:attribute name="mSearchString" type="String" />
    <aura:attribute name="mMessage" type="String" default="" />
    <aura:attribute name="mErrorMessage" type="String" default="" />
    <aura:attribute name="mHasError" type="Boolean" default="false" />
    <aura:attribute name="mTimer" type="Integer" />
    <aura:attribute name="mInitialized" type="Boolean" default="false" />
    
    <div aura:id="searchRes" class="slds-form-element slds-lookup slds-is-close" data-select="single" >
        <aura:if isTrue="{!v.mRequired}">
            <span class="slds-form-element__label slds-required">*</span>
        </aura:if>
        <label class="slds-form-element__label" for="lookup-348">{!v.mLabel}</label>
        
        <div class="slds-form-element__control">    
            <div class="slds-input-has-icon slds-input-has-icon--right">
                <lightning:icon class="slds-input__icon slds-show" iconName="utility:search" size="x-small" alternativeText="search"/> 
                <div aura:id="lookupPill" class="slds-pill-container slds-hide">
                    <span class="slds-pill" style="width:100%">
                        <span class="slds-icon_container  slds-combobox__input-entity-icon" title="record">
                            <lightning:icon class="slds-icon slds-icon slds-icon_small slds-icon-text-default" iconName="{!v.mIconName}" size="x-small" alternativeText="icon"/>
                            <span class="slds-assistive-text"></span>
                        </span>  
                        <span class="slds-pill__label slds-p-left_x-large">
                            {!v.mSelectedRecordPrimaryField}  
                        </span>
                        <button class="slds-button slds-button--icon slds-pill__remove" onclick="{!c.onRemoveBtnClick}">
                            <lightning:icon class="slds-button__icon" iconName="utility:close" size="x-small" alternativeText="search"/>  
                            <span class="slds-assistive-text">Remove</span>
                        </button>
                    </span>
                </div>
                <div aura:id="lookupField" class="slds-show">
                    <!--<ui:inputText focus="{!c.onSearchFocus}" blur="{!c.onSearchBlur}" updateOn="keyup" keyup="{!c.onSearchKeyUp}" class="slds-lookup__search-input slds-input" value="{!v.mSearchString}" placeholder="Search..."/>-->
                    <lightning:input onfocus="{!c.onSearchFocus}" onblur="{!c.onSearchBlur}" onchange="{!c.onSearchKeyUp}" value="{!v.mSearchString}" label="" name="" class="inputField-LabelHidden"/>
                </div>   
            </div>
        </div>      
        <ul class="slds-listbox slds-listbox_vertical slds-dropdown slds-dropdown_fluid slds-lookup__menu slds" role="listbox">
            <center> <ui:spinner aura:id="spinner"/> </center>
            <center> {!v.mMessage}</center>
            <aura:iteration items="{!v.mRecordsList}" var="currentRecord">
                <c:COH_UTIL_LookupFieldRecord mRecord="{!currentRecord}"
                                              mIconName="{!v.mIconName}"/>
            </aura:iteration>
        </ul>
        <aura:if isTrue="{!and(v.mRequired, v.mHasError)}">
            <div class="slds-form-element__help">{!v.mErrorMessage}</div>
        </aura:if>  
    </div>	
</aura:component>