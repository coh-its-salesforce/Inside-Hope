<aura:component  implements="forceCommunity:profileMenuInterface,forceCommunity:themeLayout,forceCommunity:availableForAllPageTypes" access="global" description="Sample Custom Theme Layout">
    <aura:attribute name="isDesktop" type="Boolean" default="false"/>
    <aura:attribute name="isMobile" type="Boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="desktopWidth" type="String" />
    <aura:attribute name="desktopHeight" type="String" />
    <aura:attribute name="mobileWidth" type="String" />
    <aura:attribute name="mobileHeight" type="String" />
    <aura:attribute name="videourl" type="String" />
    <!--<iframe allowfullscreen="" webkitallowfullscreen="" mozallowfullscreens=""  width= "300"   height= "1000" src="https://bcove.video/2TXBC4i" frameborder="0" style="{!if(v.isDesktop,'width: 100%;height: 430px;','')}"></iframe> -->
    
    <aura:if isTrue="{!v.isDesktop}">
        
        <iframe width="{!v.desktopWidth}" height="{!v.desktopHeight}" src="{!v.videourl}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen= "true"></iframe>
    </aura:if>
    <aura:if isTrue="{!v.isMobile}">
        
        <iframe width="{!v.mobileWidth}" height="{!v.mobileHeight}" src="{!v.videourl}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen= "true"></iframe>
    </aura:if>
</aura:component>