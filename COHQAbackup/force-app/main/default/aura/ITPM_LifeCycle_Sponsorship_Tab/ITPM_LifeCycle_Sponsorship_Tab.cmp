<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId,lightning:isUrlAddressable" controller="ITPM_LifeCycle_Tabs_Controller">
   
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:attribute name="ITPMObj" type="IT_Portfolio_Management__c" default=""/>
   <aura:attribute name="link2" type="String"/>
    <aura:attribute name="link3" type="String"/>
  
    
   
    
     <div class="slds-card slds-card_boundary" style="box-shadow: 0 2px 4px 4px rgba(0, 0, 0, 0.16);">
        <div class="slds-section slds-is-open slds-m-top_none">
            <h3 class="slds-section__title">
                <button aria-controls="expando-unique-id" aria-expanded="true" class="slds-button slds-section__title-action">
                    <lightning:icon iconName="utility:chevrondown" alternativeText="Open" size="xx-small" class="slds-p-right_x-small"/>
                    <span class="slds-truncate" title="Section Title"> Sponsorship/Owners/Functional Areas </span>
                </button>
            </h3>
       
        <lightning:messages /><br/>
        <div class="slds-p-left_medium">
          <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Executive/Business Sponsor  : </span><a href="{!v.link3}"  target="_blank"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Business_Sponsor__r.Name}"/></a>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">IT/Delivery Functional Area: </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.IT_Functional_Area__c}" />
                      </div>
          </div><br/><br/>
          <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Business Owner : </span><a href="{!v.link2}"  target="_blank"><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Business_Owner__r.Name}" /></a>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">IT/Delivery Sub-Functional Area : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.IT_Functional_Sub_Area__c}" />
                     </div>
          </div><br/><br/>
          <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">IT/Delivery Sponsor : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.IT_Sponsor__c}"/>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">ConnectHope Sub-Functional Area : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.ConnectHope_Apps__c}" />
                     </div>
            </div><br/><br/>
              <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">IT/Delivery Owner : </span><ui:outputText value="{!v.v.ITPMObj.ITS_Intake_Request__r.IT_Owner__c}" />
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">ConnectHope Applications : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.ConnectHope_Sub_Apps__c}" />
                    </div>
          </div><br/><br/>
            <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                   </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">Other Impacted Applications: </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Impacted_Applications__c}" />
                    </div>
          </div><br/><br/>
            
           
         
            <br/>
            
            </div>
        </div>
        </div>
</aura:component>