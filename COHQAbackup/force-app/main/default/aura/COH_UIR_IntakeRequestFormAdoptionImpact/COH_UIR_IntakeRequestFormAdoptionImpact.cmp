                                                 value="{!v.mCheckboxGroupValues.COH_UIR_SHR_WhichDeptsAdoptionImpact__c}"
                                                 aura:id="intakeRequestForm"
                                                 required="true"
                                                 onchange="{!c.onChange}"
                                                 title="Please provide details of which areas are impacted"/>
                    </div>         
                </div>  
            </div>
        </aura:if>
        
