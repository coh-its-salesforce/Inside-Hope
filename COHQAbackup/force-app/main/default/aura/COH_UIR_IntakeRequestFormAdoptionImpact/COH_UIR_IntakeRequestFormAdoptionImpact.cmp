                <div class="slds-form-element__control">
                    <lightning:select value="{!v.mIntakeRequest.COH_UIR_SHR_OtherDeptsAdoptionImpact__c}" 
                                      label="Are there adoption impacts with other departments?"
                                      name="COH_UIR_SHR_OtherDeptsAdoptionImpact__c"
                                      aura:id="intakeRequestForm"
                                      required="true">
                        <option value="">--Select--</option>
                        <aura:iteration items="{!v.mPicklists.COH_UIR_SHR_OtherDeptsAdoptionImpact__c}" var="currentPicklistOption">
                            <option value="{!currentPicklistOption.value}" selected="{!currentPicklistOption.value==v.mIntakeRequest.COH_UIR_SHR_OtherDeptsAdoptionImpact__c}">{!currentPicklistOption.label}</option>                        
