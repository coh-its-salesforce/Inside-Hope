<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId,lightning:isUrlAddressable" controller="COH_Get_IT_ResourceListView">
 <aura:handler name="init" value="{!this}" action="{!c.doInit}" /> <!-- calling doInit method in Component Controller -->
    <!--<aura:attribute name="ResLst" type="IT_Resource__c[]"/>-->
    <aura:attribute name="ITRRecs" type="IT_Resource__c"/>
    <!--<aura:attribute name="recordId" type="String" />-->
        <aura:attribute name="isEdit" type="Boolean" default="false" description="Used to handle show /hide edit form"/>
	<aura:if isTrue="{!v.isEdit == false}">
    <article class="slds-card">
        <center>
          <div class="slds-m-top_medium">
          	<lightning:button label="Edit" variant="brand" name="Edit" onclick="{!c.handleEdit}"/>
          </div>
        </center>
      <div class="slds-card__header slds-grid">
        <header class="slds-media slds-media_center slds-has-flexi-truncate">
          <div class="slds-media__figure">
            <span class="slds-icon_container slds-icon-standard-account" title="description of icon when needed">
                <lightning:icon iconName="standard:groups" size="large" alternativeText="List account"/>
            </span>
          </div>
          <div class="slds-media__body">
            <h2>
                <span class="slds-text-body_regular">IT Resources</span><br/>
                <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="IT Resources">
                <span class="slds-text-heading_medium"><b>Self</b></span>
              </a>
            </h2>
          </div>
        </header>
       </div>
      <div class="slds-card__body">
        <table class="slds-table slds-table_bordered slds-no-row-hover slds-table_cell-buffer">
          <thead>
            <tr class="slds-text-title_caps">
                <th scope="col">
                  <div class="slds-border_right">
                	<div class="slds-truncate" title="Name"></div>
                  </div>
              </th>
              <th scope="col">
                  <div class="slds-border_right">
                	<div class="slds-truncate" title="Name">Name</div>
                  </div>
              </th>
              <th scope="col">
                  <div class="slds-border_right">
                	<div class="slds-truncate" title="Job Title">Job Title</div>
                  </div>
              </th>
              <th scope="col">
                  <div class="slds-border_right">
                	<div class="slds-truncate" title="Unavailable Status">Unavailable Status</div>
                  </div>
              </th>
              <th scope="col">
                  <div class="slds-border_right">
                	<div class="slds-truncate" title="Assign Delegate">Assign Delegate</div>
                  </div>
              </th>
            </tr>
          </thead>
          <tbody>
                  <tr class="slds-hint-parent">
                      <th scope="row">   

                      </th>
                      <td>   
                          <div class="slds-truncate" title="Name"><a onclick="{!c.handleClick}" target="_blank">{!v.ITRRecs.Name}</a></div>
                      </td>
                      <td>
                          <div class="slds-truncate" title="Job Title">{!v.ITRRecs.Job_Title_Update__c}</div>
                      </td>
                      <td>
                          <input type="checkbox" name ="Unavailable Status" checked="{!v.ITRRecs.Unavailable_Status__c}" disabled="true"></input>
                      </td>
                      <td>
                          <div class="slds-truncate" title="Assign Delegate">{!v.ITRRecs.Assign_Delegate__r.Name}</div>
                      </td>
                  </tr>                     

          </tbody>
        </table>
      </div>
      <footer class="slds-card__footer"><a href="javascript:void(0);"><!--View All <span class="slds-assistive-text">entity type</span>--></a></footer>
    </article>
    </aura:if>
    <aura:if isTrue="{!v.isEdit == true}">
            
        <lightning:recordEditForm
                                  
                                  onsuccess="{!c.handleSuccess}"
                                  recordId="{!v.ITRRecs.Id}"
                                  objectApiName="IT_Resource__c">
            <article class="slds-card">
                <center>
                    <div class="slds-m-top_medium">
                        <lightning:button variant="brand" type="submit" name="Save" label="Save" />
                        <lightning:button label="Cancel" name="Cancel" onclick="{!c.handleCancel}"/>
                    </div>
                </center><br/>
                <table class="slds-table slds-table_bordered slds-no-row-hover slds-table_cell-buffer">
                    <thead>
                        <tr class="slds-text-title_caps">
                            <th scope="col">
                                <div class="slds-border_right">
                                    <div class="slds-truncate" title="Name"></div>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="slds-border_right">
                                    <div class="slds-truncate" title="Name">Name</div>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="slds-border_right">
                                    <div class="slds-truncate" title="Job Title">Job Title</div>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="slds-border_right">
                                    <div class="slds-truncate" title="Unavailable Status">Unavailable Status</div>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="slds-border_right">
                                    <div class="slds-truncate" title="Assign Delegate">Assign Delegate</div>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="slds-hint-parent">
                            <th scope="row">
                            </th>
                            <td>
                                {!v.ITRRecs.Name}
                            </td>
                            <td>
                                <lightning:outputField fieldName="Job_Title_Update__c" variant="label-hidden"/>
                            </td>
                            <td>
                                <lightning:inputField fieldName="Unavailable_Status__c" variant="label-hidden"/>
                            </td>
                            <td>
                                <lightning:inputField fieldName="Assign_Delegate__c" variant="label-hidden"/>
                            </td>                        
                        </tr>
                    </tbody>
                </table>
      <footer class="slds-card__footer"><a href="javascript:void(0);"><!--View All <span class="slds-assistive-text">entity type</span>--></a></footer>
    </article>

        </lightning:recordEditForm>
    </aura:if>
    
    
</aura:component>