<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId,lightning:isUrlAddressable" controller="ITPM_LifeCycle_Tabs_Controller">
   
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:attribute name="ITPMObj" type="IT_Portfolio_Management__c" default=""/>
   
  
    
   
    
     <div class="slds-card slds-card_boundary" style="box-shadow: 0 2px 4px 4px rgba(0, 0, 0, 0.16);">
        <div class="slds-section slds-is-open slds-m-top_none">
            <h3 class="slds-section__title">
                <button aria-controls="expando-unique-id" aria-expanded="true" class="slds-button slds-section__title-action">
                    <lightning:icon iconName="utility:chevrondown" alternativeText="Open" size="xx-small" class="slds-p-right_x-small"/>
                    <span class="slds-truncate" title="Section Title"> Intake Justification </span>
                </button>
            </h3>
       
        <lightning:messages /><br/>
        <div class="slds-p-left_medium">
          <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Executive Summary  : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Executive_Summary__c}"/>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">Benefits : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Business_Owner__r.Short_Term_Benefits__c}" />
                </div>
          </div><br/><br/>
          <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">Problem Statement : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Project_Background__c}" />
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                   <span class="slds-text-title_bold">ROI : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.ROI__c}"/>
                </div>
          </div><br/><br/>
          <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">Goals and Objectives: </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Describe_goals_and_objectives__c}"/>
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                   <span class="slds-text-title_bold">Key Assumptions : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Key_Assumptions__c}" /></div>
            </div><br/><br/>
              <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     <span class="slds-text-title_bold">Scope : </span><ui:outputText value="{!v.v.ITPMObj.ITS_Intake_Request__r.Scope_Considerations__c}" />
                </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    <span class="slds-text-title_bold">Key Dependencies : </span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Key_Dependencies__c}" />
                    
                </div>
          </div><br/><br/>
             <div class="slds-grid">
                 <div class="slds-col--padded slds-large-size--6-of-12">
                     </div>
                <div class="slds-col--padded slds-large-size--6-of-12">
                    
                    <span class="slds-text-title_bold">Risks/Impacts if project is not approved :</span><ui:outputText value="{!v.ITPMObj.ITS_Intake_Request__r.Impacts_Risks_if_not_approved__c}"/>
                </div>
          </div><br/><br/>
            
         
            
            
            </div>
        </div>
        </div>
</aura:component>