    <!--This styling block is for the Expanding Hope Search Functionality -->
	<apex:outputpanel rendered="{!sObjName == ''}">
        <div class="main-container">
           	<div class="main-header-area">
                <div class="main-header"> 
                            <div class="logo-image-wrap">
                                <a href="/apex/COH_CampusPlanHeroAreaVFPage">
                           			<apex:image url="{!$Resource.ExpandingHopeLogoMain}" title="Click to search all stories" />
                                </a>
                            </div>
                            <div class="header-search-area">
                                <a href="apex/ExpandingHopePageViewer"></a>
                            </div>
                </div>                   
            </div>
            <div class="banner-body-content-area">
                <div class="search-container">
                    <div class="search-bar-area">
                        <apex:form >
                          <apex:inputText value="{!searchStr}"/>
                              <apex:commandButton value="Search in News, Timelines, FAQs" action="{!soslLookup_method}" reRender="timeline,error,NewsItem,FAQs" status="actStatusId"/>
                            <apex:actionStatus id="actStatusId">
                                        <apex:facet name="start" >
                                            <img src="/img/loading.gif"/>                    
                                        </apex:facet>
                            </apex:actionStatus>
                          </apex:form>
                    </div>
                    <section class="search-section">
                        <apex:pageBlock title="Campus Plan News" id="NewsItem">
                            <apex:pageblockTable value="{!newsList}" var="news">
                                <apex:column >
                                    <a href="apex/ExpandingHopePageViewer?id={!news.Id}">{!news.Title__c} </a>
                                </apex:column>
                                <apex:column value="{!news.name}"/>
                                <apex:column value="{!news.Title__c}"/>
                                <apex:column value="{!news.News_Content_Next_to_Image__c}"/>
                            </apex:pageblockTable>
                             <!-- <apex:outputLink value="{!newsItem.Id}" >{!newsItem.Title__c}</apex:outputLink> -->
                         </apex:pageBlock>
                    </section>
                    <section class="search-section">
                        <apex:pageBlock title="Timeline" id="timeline">
                            <apex:pageblockTable value="{!timelineList }" var="time">
                                <apex:column >
                                    <a href="apex/ExpandingHopePageViewer?id={!time.Id}">{!time.Title__c} </a>
                                </apex:column>
                                <apex:column value="{!time.name}"/>
                                <apex:column value="{!time.Title__c}"/>
                                <apex:column value="{!time.Description__c}"/>
                            </apex:pageblockTable>
                        </apex:pageBlock>
                     </section>
                    <section class="search-section">
                        <apex:pageBlock title="FAQs" id="FAQs">
                            <apex:pageblockTable value="{!faqList}" var="faq">
                                <apex:column >
                                    <a href="apex/ExpandingHopePageViewer?id={!faq.Id}">{!faq.Question__c} </a>
                                </apex:column>
                                <apex:column value="{!faq.name}"/>
                                <apex:column value="{!faq.Question__c}"/>
                                <apex:column value="{!faq.Answer__c}"/>
                            </apex:pageblockTable>
                         </apex:pageBlock>
                    </section>
                </div> <!-- end of search-container -->
                 <apex:outputPanel title="" id="error">
               	 	<apex:pageMessages ></apex:pageMessages>
                 </apex:outputPanel>
            </div>            
     		<div class="footer"><img src="{!$Resource.ExpandingHopeSiteFooter}" class="fooImage"/></div>  
        </div>
       
    </apex:outputpanel>
    
    
