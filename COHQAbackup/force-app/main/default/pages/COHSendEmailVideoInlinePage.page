<apex:page standardcontroller="Case" extensions="COHSendEmailVideoInlinePageController" lightningStylesheets="true" showHeader="false" sidebar="false">
    <apex:slds />
    <apex:form >
    
    <apex:pageBlock mode="maindetail" id="pb">
        <apex:pageMessages ></apex:pageMessages>
        <apex:pageblockSection columns="1">
            <apex:outputPanel >
            <apex:actionStatus id="status">
                <apex:facet name="start">
                    <apex:outputPanel ><apex:commandButton value="Please wait..." styleClass="slds-button slds-button_brand" disabled="true" /></apex:outputPanel>
                </apex:facet>
                <apex:facet name="stop">
                   <apex:outputPanel ><apex:commandButton value="Send Email Video" styleClass="slds-button slds-button_brand" action="{!sendVideoEmail}" status="status"  rerender="pb"/></apex:outputPanel>
                </apex:facet>
            </apex:actionStatus>
             
            
        </apex:outputPanel>
        
         <apex:outputField value="{!Case.Email_Video_Sent__c}" label="MyCityofHome.com Email Sent"/>
        </apex:pageblockSection>
        
    </apex:pageBlock>
    
    </apex:form>
</apex:page>